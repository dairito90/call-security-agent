<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.callsecurity.agent2">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS"/>
    <uses-permission android:name="android.permission.CALL_SCREENING"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>

    <application
        android:allowBackup="true"
        android:label="Call Shield"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <service
            android:name=".service.CallSecurityScreeningService"
            android:label="Call Shield Service"
            android:exported="true"
            android:permission="android.permission.BIND_SCREENING_SERVICE">

            <intent-filter>
                <action android:name="android.telecom.CallScreeningService"/>
            </intent-filter>

        </service>

    </application>

</manifest>
